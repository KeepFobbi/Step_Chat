<UserControl x:Class="Chat.UserControlMessageReceived"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chat"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ContextMenu>
            <ContextMenu x:Name="SelContextMenu">
                <MenuItem Header="Выбрать" Click="MenuItem_Click_1"/>
                <MenuItem Header="Переслать" Click="MenuItem_Click_3"/>
            </ContextMenu>
        </Grid.ContextMenu>
        <Border Background="{StaticResource PrimaryHueDarkBrush}" CornerRadius="15 15 15 0" Margin="10 12">
            <TextBlock x:Name="messageText" Margin="15" TextWrapping="Wrap" Text="Привет, как дела?" Foreground="White"/>
        </Border>
        <TextBlock x:Name="timeRec" Text="Thu 5:45PM" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="10" Margin="10 0"/>
    </Grid>
</UserControl>
