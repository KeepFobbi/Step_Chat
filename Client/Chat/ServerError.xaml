<Window x:Class="Chat.ServerError"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat"
        mc:Ignorable="d"
        Title="ServerError" Height="450" Width="800">
    <Grid>
        <Border Background="Gray" CornerRadius="15 15 0 15" Margin="10 12">
            <TextBlock x:Name="messageText" Margin="15" TextWrapping="Wrap" Text="SERVER ERROR! SORRY:(" Foreground="White" FontSize="48" FontFamily="Yu Gothic Light"/>
        </Border>
        <TextBlock x:Name="timeSent" Text="Thu 5:45PM" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="10" Margin="10 0"/>
    </Grid>
</Window>
